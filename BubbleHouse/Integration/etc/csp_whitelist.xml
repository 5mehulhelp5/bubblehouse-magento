<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/config.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="app-bubblehouse-script" type="host">https://app.bubblehouse.com</value>
            </values>
        </policy>

        <!-- Allow images from app.bubblehouse.com -->
        <policy id="img-src">
            <values>
                <value id="app-bubblehouse-img" type="host">https://app.bubblehouse.com</value>
            </values>
        </policy>

        <!-- Allow styles from app.bubblehouse.com -->
        <policy id="style-src">
            <values>
                <value id="app-bubblehouse-style" type="host">https://app.bubblehouse.com</value>
            </values>
        </policy>

        <!-- Allow connections (AJAX, WebSockets) to app.bubblehouse.com -->
        <policy id="connect-src">
            <values>
                <value id="app-bubblehouse-connect" type="host">https://app.bubblehouse.com</value>
            </values>
        </policy>
    </policies>
</config>
